BR2_LINUX_KERNEL_DEFCONFIG="bcm2709"
BR2_LINUX_KERNEL_ZIMAGE=y

# Install the DTB files, as the RPi2 uses the Device Tree
BR2_PACKAGE_RPI_FIRMWARE=y
